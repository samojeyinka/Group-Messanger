<div class="flex justify-between items-center bg-[#252728]  p-2 border-solid border-2 border-gray-800 rounded-md">
    <div class="flex ">
    <div class="w-[3rem] h-[3rem] rounded-full overflow-hidden">
        <% if user.avatar.attached? %>
            <%= image_tag(user.avatar , class:"w-full h-full")%>
                <% else %>
                    <%= image_tag('avatar.png' , class:"w-full h-full") %>
                        <%end%>
    </div>
    <div class="flex flex-col ml-3">
        <h4 class="text-gray-50 font-medium text-[1.05rem]">
            <%= link_to user.username, user %>
        </h4>
        <p class="text-gray-300 font-normal text-[.9rem] mt-2">
           <%= truncate(user.messages.last&.body,length:17) || 'Start conversation' %>
        </p>
    </div>
</div>

<div class="flex flex-col">
    <p class="text-[.9rem] text-gray-400"><%= '10:20 PM' %></p>
    
    <div class="flex items-center justify-end mt-2">
        <i class="fa fa-eye text-[.7rem] font-normal text-gray-400 mr-4" aria-hidden="true"></i>
        <i class="fa fa-ellipsis-v text-[.7rem] text-gray-400 cursor-pointer" aria-hidden="true"></i>
    </div>
</div>

</div>
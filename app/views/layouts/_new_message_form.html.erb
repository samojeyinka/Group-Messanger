<div class="form-group msg-form">
    <%= form_with(model: [@single_group ,@message], remote: true, class: "d-flex" ) do |f| %>
      <%= f.text_field :body, id: 'chat-text', class: "text-black form-control msg-content", autocomplete: 'off' %>
      <%= f.submit data: { disable_with: false }, class: "btn btn-primary" %>
    <% end %>
  </div>